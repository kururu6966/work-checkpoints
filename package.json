{
  "name": "work-checkpoints",
  "displayName": "Work Checkpoints",
  "description": "Save and restore work snapshots using a shadow Git repository",
  "version": "0.6.0",
  "publisher": "kururu6966",
  "license": "MIT",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/kururu6966/work-checkpoints"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "SCM Providers"
  ],
  "keywords": [
    "checkpoint",
    "snapshot",
    "backup",
    "git",
    "history",
    "undo"
  ],
  "activationEvents": [
    "workspaceContains:.git"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "work-checkpoints.saveSnapshot",
        "title": "Work Checkpoints: Save Snapshot",
        "icon": "$(add)"
      },
      {
        "command": "work-checkpoints.saveSnapshotWithDescription",
        "title": "Work Checkpoints: Save Snapshot with Description"
      },
      {
        "command": "work-checkpoints.restoreSnapshot",
        "title": "Work Checkpoints: Restore Snapshot"
      },
      {
        "command": "work-checkpoints.deleteSnapshots",
        "title": "Work Checkpoints: Delete Snapshots"
      },
      {
        "command": "work-checkpoints.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "work-checkpoints.deleteItem",
        "title": "Delete",
        "icon": "$(trash)"
      },
      {
        "command": "work-checkpoints.restoreItem",
        "title": "Restore",
        "icon": "$(history)"
      },
      {
        "command": "work-checkpoints.renameItem",
        "title": "Rename",
        "icon": "$(edit)"
      },
      {
        "command": "work-checkpoints.toggleFavorite",
        "title": "Add to Favorites",
        "icon": "$(star)"
      },
      {
        "command": "work-checkpoints.removeFavorite",
        "title": "Remove from Favorites",
        "icon": "$(star-full)"
      },
      {
        "command": "work-checkpoints.restoreFileItem",
        "title": "Restore File",
        "icon": "$(history)"
      },
      {
        "command": "work-checkpoints.deleteFileItem",
        "title": "Delete File",
        "icon": "$(trash)"
      },
      {
        "command": "work-checkpoints.openFileAtRevision",
        "title": "Open File at Revision",
        "icon": "$(go-to-file)"
      },
      {
        "command": "work-checkpoints.restoreFolderItem",
        "title": "Restore Folder",
        "icon": "$(history)"
      },
      {
        "command": "work-checkpoints.deleteFolderItem",
        "title": "Delete Folder",
        "icon": "$(trash)"
      },
      {
        "command": "work-checkpoints.viewAsTree",
        "title": "View as List",
        "icon": "$(list-tree)"
      },
      {
        "command": "work-checkpoints.viewAsList",
        "title": "View as Tree",
        "icon": "$(list-flat)"
      },
      {
        "command": "work-checkpoints.groupByBranch",
        "title": "Group by Branch",
        "icon": "$(list-unordered)"
      },
      {
        "command": "work-checkpoints.flatList",
        "title": "Flat List",
        "icon": "$(git-branch)"
      },
      {
        "command": "work-checkpoints.showClaudeSnapshots",
        "title": "Show Claude Snapshots",
        "icon": "$(eye-closed)"
      },
      {
        "command": "work-checkpoints.hideClaudeSnapshots",
        "title": "Hide Claude Snapshots",
        "icon": "$(eye)"
      },
      {
        "command": "work-checkpoints.deleteAll",
        "title": "Delete All Snapshots",
        "icon": "$(trash)"
      },
      {
        "command": "work-checkpoints.deleteClaudeSnapshots",
        "title": "Delete Claude Snapshots",
        "icon": "$(trash)"
      },
      {
        "command": "work-checkpoints.openSettings",
        "title": "Open Settings",
        "icon": "$(gear)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "work-checkpoints",
          "title": "Work Checkpoints",
          "icon": "resources/checkpoint.svg"
        }
      ]
    },
    "views": {
      "work-checkpoints": [
        {
          "type": "webview",
          "id": "workCheckpointsInput",
          "name": "Create Snapshot"
        },
        {
          "id": "workCheckpointsView",
          "name": "Snapshots"
        }
      ]
    },
    "configuration": {
      "title": "Work Checkpoints",
      "properties": {
        "work-checkpoints.messageFormat": {
          "type": "string",
          "default": "${branch} @ ${date}",
          "description": "Snapshot message format. Variables: ${branch}, ${date}"
        },
        "work-checkpoints.dateFormat": {
          "type": "string",
          "default": "yyyy/MM/dd HH:mm:ss",
          "description": "Date format for ${date}. Tokens: yyyy, MM, dd, HH, mm, ss"
        },
        "work-checkpoints.showDeleteAllButton": {
          "type": "boolean",
          "default": true,
          "description": "Show 'Delete All' button in the Create Snapshot panel"
        },
        "work-checkpoints.ignorePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Additional patterns to ignore when creating snapshots (gitignore format)"
        },
        "work-checkpoints.retentionDays": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "maximum": 365,
          "description": "Number of days to keep snapshots before auto-deletion. Set to 0 to disable auto-deletion. Favorites are always excluded from auto-deletion."
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "work-checkpoints.groupByBranch",
          "when": "view == workCheckpointsView && !workCheckpoints.groupByBranch",
          "group": "navigation@0"
        },
        {
          "command": "work-checkpoints.flatList",
          "when": "view == workCheckpointsView && workCheckpoints.groupByBranch",
          "group": "navigation@0"
        },
        {
          "command": "work-checkpoints.hideClaudeSnapshots",
          "when": "view == workCheckpointsView && workCheckpoints.showClaudeSnapshots",
          "group": "navigation@0"
        },
        {
          "command": "work-checkpoints.showClaudeSnapshots",
          "when": "view == workCheckpointsView && !workCheckpoints.showClaudeSnapshots",
          "group": "navigation@0"
        },
        {
          "command": "work-checkpoints.viewAsTree",
          "when": "view == workCheckpointsView && !workCheckpoints.treeViewMode",
          "group": "navigation@1"
        },
        {
          "command": "work-checkpoints.viewAsList",
          "when": "view == workCheckpointsView && workCheckpoints.treeViewMode",
          "group": "navigation@1"
        },
        {
          "command": "work-checkpoints.refresh",
          "when": "view == workCheckpointsView",
          "group": "navigation@2"
        },
        {
          "command": "work-checkpoints.saveSnapshot",
          "when": "view == workCheckpointsView",
          "group": "navigation@3"
        },
        {
          "command": "work-checkpoints.deleteAll",
          "when": "view == workCheckpointsView",
          "group": "2_delete"
        },
        {
          "command": "work-checkpoints.deleteClaudeSnapshots",
          "when": "view == workCheckpointsView",
          "group": "2_delete"
        },
        {
          "command": "work-checkpoints.openSettings",
          "when": "view == workCheckpointsView",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "work-checkpoints.toggleFavorite",
          "when": "view == workCheckpointsView && viewItem == snapshot",
          "group": "inline@0"
        },
        {
          "command": "work-checkpoints.removeFavorite",
          "when": "view == workCheckpointsView && viewItem == snapshotFavorite",
          "group": "inline@0"
        },
        {
          "command": "work-checkpoints.restoreItem",
          "when": "view == workCheckpointsView && (viewItem == snapshot || viewItem == snapshotFavorite)",
          "group": "inline@1"
        },
        {
          "command": "work-checkpoints.deleteItem",
          "when": "view == workCheckpointsView && (viewItem == snapshot || viewItem == snapshotFavorite)",
          "group": "inline@2"
        },
        {
          "command": "work-checkpoints.renameItem",
          "when": "view == workCheckpointsView && (viewItem == snapshot || viewItem == snapshotFavorite)"
        },
        {
          "command": "work-checkpoints.openFileAtRevision",
          "when": "view == workCheckpointsView && viewItem == snapshotFile",
          "group": "inline@1"
        },
        {
          "command": "work-checkpoints.restoreFileItem",
          "when": "view == workCheckpointsView && viewItem == snapshotFile",
          "group": "inline@2"
        },
        {
          "command": "work-checkpoints.deleteFileItem",
          "when": "view == workCheckpointsView && viewItem == snapshotFile",
          "group": "inline@3"
        },
        {
          "command": "work-checkpoints.restoreFolderItem",
          "when": "view == workCheckpointsView && viewItem == snapshotFolder",
          "group": "inline@1"
        },
        {
          "command": "work-checkpoints.deleteFolderItem",
          "when": "view == workCheckpointsView && viewItem == snapshotFolder",
          "group": "inline@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.57.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "ignore": "^7.0.5",
    "simple-git": "^3.30.0"
  }
}