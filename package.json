{
  "name": "work-checkpoints",
  "displayName": "Work Checkpoints",
  "description": "Save and restore work snapshots using a shadow Git repository",
  "version": "0.1.0",
  "publisher": "kururu6966",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kururu6966/work-checkpoints"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.git"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "work-checkpoints.saveSnapshot",
        "title": "Work Checkpoints: Save Snapshot",
        "icon": "$(add)"
      },
      {
        "command": "work-checkpoints.restoreSnapshot",
        "title": "Work Checkpoints: Restore Snapshot"
      },
      {
        "command": "work-checkpoints.deleteSnapshots",
        "title": "Work Checkpoints: Delete Snapshots"
      },
      {
        "command": "work-checkpoints.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "work-checkpoints.deleteItem",
        "title": "Delete",
        "icon": "$(trash)"
      },
      {
        "command": "work-checkpoints.restoreItem",
        "title": "Restore",
        "icon": "$(history)"
      },
      {
        "command": "work-checkpoints.renameItem",
        "title": "Rename",
        "icon": "$(edit)"
      },
      {
        "command": "work-checkpoints.restoreFileItem",
        "title": "Restore File",
        "icon": "$(history)"
      },
      {
        "command": "work-checkpoints.deleteFileItem",
        "title": "Delete File",
        "icon": "$(trash)"
      },
      {
        "command": "work-checkpoints.openFileAtRevision",
        "title": "Open File at Revision",
        "icon": "$(go-to-file)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "work-checkpoints",
          "title": "Work Checkpoints",
          "icon": "resources/checkpoint.svg"
        }
      ]
    },
    "views": {
      "work-checkpoints": [
        {
          "id": "workCheckpointsView",
          "name": "Snapshots"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "work-checkpoints.saveSnapshot",
          "when": "view == workCheckpointsView",
          "group": "navigation"
        },
        {
          "command": "work-checkpoints.refresh",
          "when": "view == workCheckpointsView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "work-checkpoints.restoreItem",
          "when": "view == workCheckpointsView && viewItem == snapshot",
          "group": "inline@1"
        },
        {
          "command": "work-checkpoints.deleteItem",
          "when": "view == workCheckpointsView && viewItem == snapshot",
          "group": "inline@2"
        },
        {
          "command": "work-checkpoints.renameItem",
          "when": "view == workCheckpointsView && viewItem == snapshot"
        },
        {
          "command": "work-checkpoints.openFileAtRevision",
          "when": "view == workCheckpointsView && viewItem == snapshotFile",
          "group": "inline@1"
        },
        {
          "command": "work-checkpoints.restoreFileItem",
          "when": "view == workCheckpointsView && viewItem == snapshotFile",
          "group": "inline@2"
        },
        {
          "command": "work-checkpoints.deleteFileItem",
          "when": "view == workCheckpointsView && viewItem == snapshotFile",
          "group": "inline@3"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.57.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "ignore": "^7.0.5",
    "simple-git": "^3.30.0"
  }
}
