{
  "name": "work-checkpoints",
  "displayName": "Work Checkpoints",
  "description": "Save and restore work snapshots using a shadow Git repository",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.git"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "work-checkpoints.saveSnapshot",
        "title": "Save Snapshot",
        "icon": "$(add)"
      },
      {
        "command": "work-checkpoints.restoreSnapshot",
        "title": "Restore Snapshot"
      },
      {
        "command": "work-checkpoints.deleteSnapshots",
        "title": "Delete Snapshots"
      },
      {
        "command": "work-checkpoints.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "work-checkpoints.deleteItem",
        "title": "Delete",
        "icon": "$(trash)"
      },
      {
        "command": "work-checkpoints.restoreItem",
        "title": "Restore",
        "icon": "$(history)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "work-checkpoints",
          "title": "Work Checkpoints",
          "icon": "resources/checkpoint.svg"
        }
      ]
    },
    "views": {
      "work-checkpoints": [
        {
          "id": "workCheckpointsView",
          "name": "Snapshots"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "work-checkpoints.saveSnapshot",
          "when": "view == workCheckpointsView",
          "group": "navigation"
        },
        {
          "command": "work-checkpoints.refresh",
          "when": "view == workCheckpointsView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "work-checkpoints.restoreItem",
          "when": "view == workCheckpointsView && viewItem == snapshot",
          "group": "inline"
        },
        {
          "command": "work-checkpoints.deleteItem",
          "when": "view == workCheckpointsView && viewItem == snapshot",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "ignore": "^7.0.5",
    "simple-git": "^3.30.0"
  }
}
